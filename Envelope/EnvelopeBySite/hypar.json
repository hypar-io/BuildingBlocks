{
  "$schema": "https://hypar.io/Schemas/Function.json",
  "id": "d4819507-d08b-41be-9157-376356d01491",
  "name": "Envelope By Site",
  "description": "Creates an Envelope from a Site boundary supplied by another function.",
  "language": "C#",
  "model_dependencies": [
    {
      "autohide": false,
      "name": "Site",
      "optional": false
    }
  ],
  "model_output": "Envelope",
  "input_schema": {
    "type": "object",
    "properties": {
      "Building Height": {
        "$hyparOrder": 1,
        "$hyparUnitType": "length",
        "type": "number",
        "description": "Overall height of the building from grade.",
        "default": 20,
        "minimum": 5,
        "maximum": 100,
        "multipleOf": 1
      },
      "Foundation Depth": {
        "$hyparOrder": 2,
        "$hyparUnitType": "length",
        "type": "number",
        "description": "Depth of the building envelope below grade.",
        "default": 10,
        "minimum": 5,
        "maximum": 20,
        "multipleOf": 1
      },
      "Site Setback": {
        "$hyparOrder": 3,
        "$hyparUnitType": "length",
        "type": "number",
        "description": "Distance from site boundary to building envelope.",
        "default": 0,
        "minimum": 0,
        "maximum": 30,
        "multipleOf": 1
      },
      "Use Setbacks": {
        "$hyparOrder": 4,
        "type": "boolean",
        "default": true,
        "description": "Enable envelope setbacks at regular intervals."
      },
      "Setback Interval": {
        "$hyparOrder": 5,
        "$hyparUnitType": "length",
        "$hyparShowIf": {
          "type": "all",
          "conditions": [
            {
              "property": "Use Setbacks",
              "value": true
            }
          ]
        },
        "type": "number",
        "description": "Vertical distance between envelope setbacks.",
        "default": 20,
        "minimum": 10,
        "maximum": 30,
        "multipleOf": 1
      },
      "Setback Depth": {
        "$hyparOrder": 6,
        "$hyparUnitType": "length",
        "$hyparShowIf": {
          "type": "all",
          "conditions": [
            {
              "property": "Use Setbacks",
              "value": true
            }
          ]
        },
        "type": "number",
        "description": "Offset depth from previous setback.",
        "default": 1,
        "minimum": 1,
        "maximum": 3,
        "multipleOf": 0.5
      },
      "Minimum Tier Area": {
        "$hyparOrder": 7,
        "$hyparUnitType": "area",
        "$hyparShowIf": {
          "type": "all",
          "conditions": [
            {
              "property": "Use Setbacks",
              "value": true
            }
          ]
        },
        "type": "number",
        "description": "Minimum area allowed for a setback tier.",
        "default": 50,
        "minimum": 10,
        "maximum": 100,
        "multipleOf": 1
      }
    }
  },
  "overrides": {
    "Envelope Footprint": {
      "context": "[*discriminator=Elements.Envelope]",
      "paradigm": "edit",
      "identity": {
        "Elevation": {
          "type": "number"
        },
        "Site Centroid": {
          "$ref": "https://schemas.hypar.io/Vector3.json"
        }
      },
      "schema": {
        "Perimeter": {
          "$ref": "https://schemas.hypar.io/Polygon.json"
        }
      }
    }
  },
  "outputs": [
    {
      "unit_type": "length",
      "name": "Height",
      "description": "Height of the building.",
      "type": "number"
    },
    {
      "unit_type": "length",
      "name": "Subgrade",
      "description": "Depth of the subgrade section.",
      "type": "number"
    }
  ],
  "element_types": [
    "https://schemas.hypar.io/Site.json",
    "https://schemas.hypar.io/Envelope.json"
  ],
  "repository_url": "https://github.com/hypar-io/BuildingBlocks/tree/master/Envelope/EnvelopeBySite",
  "last_updated": "0001-01-01T00:00:00",
  "cli_version": "0.9.6-alpha.0",
  "messages": {
    "ja": {
      "name": "サイト別エンベロープ",
      "description": "他の機能によって提供されたサイト境界からエンベロープを作成します。",
      "input_schema": {
        "properties": {
          "Building Height": {
            "description": "建物のグレードからの全体的な高さ",
            "name": "建物の高さ"
          },
          "Foundation Depth": {
            "description": "グレード以下の建物外壁の深さ。",
            "name": "基礎の深さ"
          },
          "Use Setbacks": {
            "description": "この機能を使用するには",
            "name": "セットバック"
          },
          "Site Setback": {
            "description": "敷地境界から建物外周までの距離",
            "name": "サイトセットバック"
          },
          "Setback Interval": {
            "description": "エンベロープセットバックの垂直方向の距離",
            "name": "セットバックインターバル"
          },
          "Setback Depth": {
            "description": "前のセットバックからのオフセット深度",
            "name": "セットバックの深さ"
          },
          "Minimum Tier Area": {
            "description": "セットバック層に許される最小面積。",
            "name": "最低限のティアエリア"
          }
        }
      },
      "outputs": [
        {
          "name": "高さ",
          "description": "建物の高さ"
        },
        {
          "name": "サブグレード",
          "description": "下地部分の深さ.a"
        }
      ],
      "overrides": {
        "Envelope Footprint": {
          "name": "エンベロープのフットプリント",
          "schema": {
            "Perimeter": {
              "name": "ペリメーター"
            }
          }
        }
      }
    }
  }
}