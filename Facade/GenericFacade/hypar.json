        "Vertical Spandrel Settings": {
          "$hyparShowIf": {
            "type": "all",
            "conditions": [
              {
                "property": "Vertical Spandrel",
                "value": true
              },
              {
                "property": "Create Generic Facade",
                "value": true
              }
            ]
          },
          "type": "object",
          "properties": {
            "Width": {
              "type": "number",
              "$hyparUnitType": "length",
              "$hyparPreferredUnits": {
