                  "type": "number",
                  "minimum": 0,
                  "maximum": 1.0,
                  "multipleOf": 0.01,
                  "$hyparUnitType": "ratio",
                  "default": 0.0
                }
              }
            }
          }
        },
        "Horizontal Spandrel": {
          "$hyparShowIf": {
            "conditions": [
