              "default": 1.0
            },
            "Material": {
              "type": "object",
              "properties": {
                "Color": {
                  "$ref": "https://hypar.io/Schemas/Geometry/Color.json"
                },
                "Shine": {
                  "type": "number",
                  "minimum": 0,
